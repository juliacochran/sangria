<p id="notice"><%= notice %></p>

<div class="content container">
	<h3 class="title-board">
		<%= @board.title %>
		<span class="board-switch"><a class="waves-effect waves-light btn change board-modal-trigger" href="#board-modal">(switch boards)</a></span>
		<span class="title-icons right">
			<%= link_to 'mode edit', edit_board_path(@board), :class => "material-icons" %>
			<%= link_to 'delete', @board, method: :delete, data: { confirm: 'Are you sure?' }, :class => "material-icons" %>
			<%= link_to 'add', new_board_path, :class => "material-icons" %>
		</span>
	</h3>


	<div class="row">
		<% @applications.each_with_index do |app, index| %>
		<div class="col s3">
			<div class="card blue-grey darken-1">
				<div class="card-content white-text" style="padding: 5px 20px">
					<span class="card-title"><%= @stages[index] %></span>
					<a href="/applications/new"><i class="material-icons card-title right">add</i></a>
				</div>
			</div>

			<% app.each_with_index do |staged_app, index| %>
			<div class="card blue-grey darken-1">
				<div class="card-content white-text">
					<span class="card-title"><%= staged_app.company.name %></span>
					<p><%= staged_app.company.location %></p>
				</div>
				<div class="card-action">
					<a><i class="material-icons">add</i></a>
				</div>
			</div>
			<% end %>
		</div>
		<% end %>
	</div>

</div>

<div id="board-modal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Modal Header</h4>
    <p>A bunch of text</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
  </div>
</div>

