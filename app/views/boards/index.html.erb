

<p id="notice"><%= notice %></p>
<div class="row">
<%= link_to '<i class="material-icons">add</i>'.html_safe, new_board_path, :class => "btn-large waves-effect waves-light"%>
</div>
<div class="row">

<% @boards.each do |board| %>
  <div class="col s12 m6 l4">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
      <span class="card-title"><%=board.title%></span>
        <p><%=board.user_id%></p>
        </div>
        <div class="card-action">
          <%= link_to 'Show', board %>
          <%= link_to 'Edit', edit_board_path(board) %>
          <%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' }%>
        </div>
      </div>
  </div>

<% end %>
</div>

