<%= form_for(@note) do |f| %>
  <div class="modal-content">
    <h5 class="strong title center">Edit Note</h5>
    <div class="row">
      <div class="col s12">
        <div class="input-field">
          <%= f.label :remind_date, :class => "active" %>
          <%= date_field :note, :remind_date, :value => @note.remind_date, :class => "datepicker" %>
        </div>
        <div class="input-field">
          <%= f.label :details, :class => "active" %> <br>
          <%= f.text_area :details, :class => "materialize-textarea" %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer actions">
    <%= f.submit :class => "modal-action modal-close btn-flat" %>
  </div>
<% end %>
