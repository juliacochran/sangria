<%= form_for(@note) do |f| %>
  <div class="modal-content">
    <h5 class="strong title">Add New Note</h5>
    <div class="row">
      <div class="col s12">
        <div class="input-field">
          <%= f.hidden_field :board_id, :value => params[:board_id] %>
        </div>
        <div class="input-field">
          <%= f.label :remind_date %><br>
          <%= date_field :note, :remind_date, :class => "datepicker" %>
        </div>
        <div class="input-field">
          <%= f.label :details %><br>
          <%= f.text_area :details, :class => "materialize-textarea" %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer actions">
    <%= f.submit :class => "modal-action modal-close btn-flat" %>
  </div>
<% end %>
