<%= form_for(@interaction) do |f| %>
  <div class="modal-content">
    <h4>Edit <%= @interaction.title %> Interaction</h4>
    <div class="row">
      <div class="col s12">
        <div class="field">
          <%= f.hidden_field :application_id %>
        </div>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :category %><br>
          <%= f.number_field :category %>
        </div>
        <div class="field">
          <%= f.label :date %><br>
          <%= date_field :application, :applied_date %> <br>
        </div>
        <div class="field">
          <%= f.label :contact_id %><br>
          <%= f.number_field :contact_id %>
        </div>
        <div class="field">
          <%= f.label :details %><br>
          <%= f.text_area :details %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer actions">
    <a class="modal-action modal-close waves-effect waves-green btn-flat" href="#!">
      <%= f.submit %>
    </a>
  </div>
<% end %>
