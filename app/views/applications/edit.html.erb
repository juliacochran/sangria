<%= form_for(@application) do |f| %>
  <div class="modal-content">
    <h4>Edit <%= @application.company.name %> Application</h4>
    <div class="row">
      <div class="col s12">
        <div class="input-field">
          <%= f.hidden_field :id %>
        </div>
        <div class="input-field">
          <%= f.hidden_field :board_id %>
        </div>
        <div class="input-field">
          <%= f.label :stage, :class => "active" %>
          <%= f.text_field :stage %>
        </div>
        <div class="input-field">
          <%= f.label :applied_date, :class => "active" %>
          <%= date_field :application, :applied_date, :class => "datepicker" %>
        </div>
        <div class="input-field">
          <%= f.label :company_id, :class => "active" %>
          <%= f.number_field :company_id %>
        </div>
        <div class="input-field">
          <%= f.label :job_id, :class => "active" %>
          <%= f.number_field :job_id %>
        </div>
        <div class="input-field">
          <%= f.label :category, :class => "active" %>
          <%= f.number_field :category %>
        </div>
        <div class="input-field">
          <%= f.label :settings, :class => "active" %>
          <%= f.text_field :settings %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer actions">
    <%= f.submit :class => "modal-action modal-close btn-flat" %>
  </div>
<% end %>
