<%= form_for(@application, builder: ComboboxFormBuilder) do |f| %>
  <div class="modal-content">
    <h5 class="strong title">Add New <%= @stage[:name] %> Application</h5>
    <div class="row">
      <div class="col s12">
        <div class="input-field">
          <%= f.hidden_field :stage, :value => @stage[:id] %>
        </div>
        <div class="input-field">
          <%= f.hidden_field :board_id, :value => @board.id %>
        </div>
        <div class="input-field">
          <%= f.label :applied_date %>
          <%= date_field :application, :applied_date, :class => "datepicker" %>
        </div>
        <div class="input-field">
          <%= f.label :job %>
          <%= f.text_field :job %>
        </div>
        <div class="input-field">
          <%= f.label :category, :class => "active" %>
          <%= f.select(:category, options_for_select(Application.categories_for_select), {}, {class: "materialize-select"}) %>
        </div>
        <div class="input-field">
          <!-- hard coded settings since we don't use it -->
          <%= f.hidden_field :settings, :value => "00000000" %>
        </div>
        <div class="input-field">
          <%= f.hidden_field :company_id %>
        </div>
        <h5>Company Info</h5>
        <div class="row">
          <div class="col s12">
            <%= fields_for :company do |company| %>
              <div class="input-field">
                <%= company.label :name, :class => "active" %>
                <%= f.combobox_tag('company[name]', [], :list_id => "company_list", :form_class => "new_application", :input_id => "company_name")%>
              </div>

              <div style="">
                <div class="input-field">
                  <%= company.label :location, :class => "active" %>
                  <%= company.text_field :location %>
                </div>
                <div class="input-field">
                  <%= company.label :website, :class => "active" %>
                  <%= company.text_field :website %>
                </div>
                <div class="input-field">
                  <%= company.label :logo, :class=> "active" %><br>
                  <%= company.text_field :logo %>
                  <%= image_tag("", :alt => "company_logo", :id => "company_logo_img", :style => "display: none;") %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer actions">
    <%= f.submit :class => "modal-action modal-close btn-flat" %>
  </div>
<% end %>

