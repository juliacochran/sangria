<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Dropdown Trigger -->
  <a class='dropdown-button btn' href='#' data-activates='company_list'>Company</a>

  <!-- Dropdown Structure -->
  <!-- TODO: not fully functional. needs more javascript associated with it  and something with material select-->
  <ul id='company_list' class='dropdown-content'>
  <% @companies.each do |company| %>
    <li><a href="#!"> <%= company.name %> </a></li>
  <% end %>
  </ul>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :role %><br>
    <%= f.text_field :role %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
